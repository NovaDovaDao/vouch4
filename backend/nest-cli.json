{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.build.json",
    "assets": [
      {
        "include": "../generated/**/*",
        "outDir": "dist/generated",
        "watchAssets": false
      }
    ],
    "watchAssets": true
  },
  "root": ".",
  "projects": {
    "app": {
      "type": "application",
      "root": ".",
      "entryFile": "main",
      "sourceRoot": "src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.app.json"
      }
    }
  },
  "plugins": [
    {
      "name": "@nestjs/swagger",
      "options": {
        "introspectComments": true
      }
    }
  ]
}